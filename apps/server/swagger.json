{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Wavelength API Documentation",
      "description": "All CRUD Operation Documentation"
      
    },
    "host": "localhost:3001/api/v1",
    
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths":{
        "/login":{
            "post":{
                "tags":["Login & Register"],
                "description":"Login to the system",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "User that we want to login",
                    "schema": {
                        "$ref": "#/definitions/login"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"Successfully Logged In"
                    },
                    "400":{
                        "description":"Invalid Credentials"
                    }
                }
            }
        },

        "/register":{
            "post":{
                "tags":["Login & Register"],
                "description":"Login to the system",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "User details for creating account",
                    "schema": {
                        "$ref": "#/definitions/register"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Successfully Registered"
                    },
                    "400":{
                        "description":"Email Already Registered"
                    }
                }
            }
        },

        "/send-email-verification-code":{
            "post":{
                "tags":["Verification"],
                "description":"Verify through email",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "Email to send the verification code",
                    "schema": {
                        "$ref": "#/definitions/send-verification-code"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"Check your mail for verification code"
                    },
                    "401":{
                        "description":"User with such email doesn't exist"
                    },
                    "400":{
                        "description":"Error Sending Mail"
                    }
                }
            }
        },

        "/email-verify-user":{
            "put":{
                "tags":["Verification"],
                "description":"Verify through email",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "Post request with verification_code and email",
                    "schema": {
                        "$ref": "#/definitions/verify-user"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Verified Successfully"
                    },
                    
                    "400":{
                        "description":"Invalid Verification Code"
                    }
                }
            }
        },

        "/user/add":{
            "post":{
                "tags":["User"],
                "description":"Add user by Super Admin",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "User details for creating account (Super user must be logged in)(pass jwt in headers with Authorization)",
                    "schema": {
                        "$ref": "#/definitions/addUser"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Successfully Registered"
                    },
                    "400":{
                        "description":"Email Already Registered"
                    },
                    "401":{
                        "description":"Unauthorized Access"
                    }
                }
            }
        },

        "/users":{
            "get":{
                "tags":["User"],
                "description":"List all users in the system",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "List all users (Only by superadmin)",
                    "schema": {
                        "$ref": "#/definitions/users"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"All Users Fetched"
                    },
                    "500":{
                        "description":"Error fetching users data"
                    }
                    
                }
            }
        },
        "/user/fetch/{id}":{
            "get":{
                "tags":["User"],
                "description":"Fetch individual user with user id",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "fetch individual user with id (Only by superadmin)",
                    "schema": {
                        "$ref": "#/definitions/users"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Fetched Successfully"
                    },
                    "500":{
                        "description":"Error Fetching User"
                    }
                    
                }
            }
        },
        "/user/update/{id}":{
            "put":{
                "tags":["User"],
                "description":"Update user",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "Update user details like password, profile_pic, address (Either by self or Super Admin)",
                    "schema": {
                        "$ref": "#/definitions/updateUser"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Updated Successfully"
                    },
                    "500":{
                        "description":"Error updating User"
                    },
                    "401":{
                        "description":"Unauthorized Access"
                    }
                    
                }
            }
        },
        "/user/delete/{id}":{
            "delete":{
                "tags":["User"],
                "description":"Delete user",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "Delete the user by Super Admin",
                    "schema": {
                        "$ref": "#/definitions/users"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"User Deleted Successfully"
                    },
                    "500":{
                        "description":"Error deleting User"
                    },
                    "401":{
                        "description":"Unauthorized Access"
                    }
                    
                }
            }
        },
        "/university/add":{
            "post":{
                "tags":["University"],
                "description":"Add university by super admin",
                "parameters":[{
                    "name": "user",
                    "in": "body",
                    
                    "description": "Add university by super admin",
                    "schema": {
                        "$ref": "#/definitions/addUniversity"
                      }
                }],
                
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"University added successfully"
                    },
                    "500":{
                        "description":"Error adding university"
                    },
                    "401":{
                        "description":"Unauthorized Access"
                    }
                }
            }
        }



    },

    "definitions":{
        "login":{
            "required":[
                "email",
                "password"
            ],
            "properties":{
                "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
            }
        },

        "register":{
            "required":[
                "full_name",
                "email",
                "password",
                "phone",
                "address",
                "course",
                "profile_pic"
            ],
            "properties":{
                "full_name": {
                    "type": "string"
                  },
                "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "course": {
                    "type": "string",
                    "enum": ["B.Sc.CSIT","BCA","CMAT","BIT","BE"]
                  },
                  "profile_pic": {
                    "type": "string"
                  }
            }
        },

        "send-verification-code":{
            "required":[
                "email"
            ],
            "properties":{
                "email": {
                    "type": "string"
                  }
            }
        },

        "verify-user":{
            "required":[
                "email",
                "verification_code"
            ],
            "properties":{
                "email": {
                    "type": "string"
                  },
                  "verification_code": {
                    "type": "string"
                  }
            }
        },

        "addUser":{
            "required":[
                "full_name",
                "email",
                "password",
                "phone",
                "address",
                "course",
                "profile_pic"
            ],
            "properties":{
                "full_name": {
                    "type": "string"
                  },
                "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "course": {
                    "type": "string",
                    "enum": ["B.Sc.CSIT","BCA","CMAT","BIT","BE"]
                  },
                  "profile_pic": {
                    "type": "string"
                  }
            }
        },

        "users":{
            "required":[
            ],
            "properties":{
            }
        },

        "updateUser":{
            "required":[
                "password",
                "address",
                "profile_pic"
            ],
            "properties":{
               
                  "password": {
                    "type": "string"
                  },
                  
                  "address": {
                    "type": "string"
                  },
                  "profile_pic": {
                    "type": "string"
                  }
            }
        },
        "addUniversity":{
            "required":[
                "title",
                "profile_pic",
                "location",
                "description"
                
            ],
            "properties":{
                "title": {
                    "type": "string"
                  },
                "profile_pic": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
            }
        }



    }
  }